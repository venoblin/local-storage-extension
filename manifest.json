{
  "manifest_version": 3,
  "name": "Local Storage Viewer",
  "version": "1.0",
  "description": "View items in local storage",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}
